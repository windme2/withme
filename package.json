{
  "name": "withme",
  "version": "1.0.0",
  "description": "WithMe Inventory Management System - Monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && nest start --watch",
    "build": "npm run build:server && npm run build:client",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start:client": "cd client && npm run start",
    "start:server": "cd server && npm run start",
    "lint:client": "cd client && npm run lint",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rimraf node_modules client/node_modules server/node_modules",
    "type-check": "cd client && npm run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
